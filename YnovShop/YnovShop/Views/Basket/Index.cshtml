@model IEnumerable<YnovShop.Data.Entities.YProductPurchase>

<h2>Votre panier</h2>
<br />
<ul class="media-list">
    @foreach (var purchase in Model) {
        <li class="media">
            <div class="media-left media-middle">
                <a href="#">
                    <img class="media-object" src="http://joygayler.com/wp-content/uploads/2014/03/Product_Chair.jpg" alt="..." style="width: 64px; height: 64px;">
                </a>
            </div>
            <div class="media-body">
                <h4 class="media-heading">NOM DU PRODUIT</h4>
                <p>DESCRIPTION</p>
                <p><small>Quantité : 1</small></p>
            </div>
        </li>
    }
</ul>
<div>
    <form action="/Basket/ValideBasket" method="post">
        <input type="submit" value="Valider le panier" class="btn btn-default" />
    </form>
</div>