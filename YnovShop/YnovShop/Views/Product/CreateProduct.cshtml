@model YnovShop.Data.Entities.YProduct

@{
    ViewData["Title"] = "CreateProduct";
}

<h2>Enregistrement d'un produit</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input id="product-name" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descritption" class="control-label"></label>
                <input id="product-description" asp-for="Descritption" class="form-control" />
                <span asp-validation-for="Descritption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input id="product-stock" asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input id="product-price" asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="product-submit" type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

