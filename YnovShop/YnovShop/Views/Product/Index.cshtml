@model IEnumerable<YnovShop.Data.Entities.YProduct>
@{
    ViewData["Title"] = "Index";
}

<br />
<h2>Produits</h2>
<br />
<div class="row">
    @foreach (var product in Model) {
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <img src="http://joygayler.com/wp-content/uploads/2014/03/Product_Chair.jpg" alt="..." style="width: 100%; height: 128px;">
            <div class="caption">
                <h3>@product.Name  -  @product.Price €</h3>
                <p>
                    @product.Descritption
                    <br />
                    <small>Il reste @product.Stock produits</small>
                </p>
                <p>
                    <a class="btn btn-primary" asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">Voir</a>
                    <form action="/Basket/AddToBasket/@product.Id" method="post">
                        <input type="submit" value="Ajouter au panier" class="btn btn-default" />
                    </form>
                </p>
            </div>
         </div>
        
        </div>
    }
</div>

<p><a href="Product/CreateProduct" class="btn btn-primary" role="button">Créer un produit</a>
